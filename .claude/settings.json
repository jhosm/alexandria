{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "tools": ["Edit", "Write"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "case \"$TOOL_INPUT_file_path\" in *.env|*.env.*|*.db) echo 'BLOCKED: refusing to edit sensitive file (.env or .db)' && exit 1;; esac"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "tools": ["Edit", "Write"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$TOOL_INPUT_file_path\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
